pkgname=socket-relay
pkgver=1.0
pkgrel=1
pkgdesc="A framework application for host multiplexion"
arch=(any)
url="https://github.com/maandree/socket-relay"
license=('GPL3')
install=socket-relay.install
depends=(python3)
makedepends=(texinfo)
source=($url/archive/$pkgver.tar.gz)
sha256sums=('ea8da3e54882f74ea47e715efe6a5e45e031a5c878a7f167f27a38a44aa6d111')


build() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX=/usr DESTDIR="$pkgdir"
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX=/usr DESTDIR="$pkgdir" install
}

